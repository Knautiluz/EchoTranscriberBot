{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "sourceMap": true,
        "moduleResolution": "node",
        "target": "ES2022",
        "module": "CommonJS",
        "noFallthroughCasesInSwitch": true,
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "exclude": [
        "./node_modules/**/*",
        "./dist/**/*"
    ]
}